<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_android" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="500dp"
        android:layout_y="117dp"
        android:text="Notifications"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="645dp"
        android:layout_height="258dp"
        android:layout_x="47dp"
        android:layout_y="219dp" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="4dp"
        android:src="@drawable/logo_ppd_v2" />

    <Button
        android:id="@+id/btnvoirnotif"
        android:layout_width="576dp"
        android:layout_height="wrap_content"
        android:layout_x="361dp"
        android:layout_y="519dp"
        android:text="Voir Notification" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_x="914dp"
        android:layout_y="207dp" >

        <RadioButton
            android:id="@+id/radbtnnotif0"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Notification 1"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radbtnnotif1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 2"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radbtnnotif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 3"
            android:textSize="25dp" />
    </RadioGroup>

</AbsoluteLayout>