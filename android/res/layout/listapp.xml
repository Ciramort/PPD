<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_android" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="0dp"
        android:src="@drawable/logo_ppd_v2" />

    <Button
        android:id="@+id/btnvoir"
        android:layout_width="565dp"
        android:layout_height="69dp"
        android:layout_x="349dp"
        android:layout_y="515dp"
        android:text="Voir" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="298dp"
        android:layout_height="265dp"
        android:layout_x="205dp"
        android:layout_y="200dp" >
    </ListView>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="259dp"
        android:layout_height="245dp"
        android:layout_x="728dp"
        android:layout_y="204dp" >

        <RadioButton
            android:id="@+id/radbtnapp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Appareil 1" />

        <RadioButton
            android:id="@+id/radbtnapp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appareil 2" />

        <RadioButton
            android:id="@+id/radbtnapp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appareil 3" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="442dp"
        android:layout_y="101dp"
        android:text="Liste Des appareils"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp" />

</AbsoluteLayout>
